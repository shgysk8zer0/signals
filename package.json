{
  "name": "@shgysk8zer0/signals",
  "version": "0.0.1",
  "description": "A polyfill for the (currently stage 1) Signals API proposal",
  "keywords": [
    "tc39-signals",
    "signal-proposal",
    "reactivity"
  ],
  "type": "module",
  "main": "./signals.cjs",
  "module": "./signals.js",
  "types": "./signals.d.ts",
  "unpkg": "./signals.min.js",
  "exports": {
    ".": {
      "import": "./signals.js",
      "require": "./signals.cjs"
    },
    "./*.js": {
      "import": "./*.js",
      "require": "./*.cjs"
    },
    "./*.mjs": {
      "import": "./*.js",
      "require": "./*.cjs"
    },
    "./*.cjs": {
      "import": "./*.js",
      "require": "./*.cjs"
    },
    "./*": {
      "import": "./*.js",
      "require": "./*.cjs"
    }
  },
  "engines": {
    "node": ">=24.10.0"
  },
  "private": false,
  "scripts": {
    "test": "npm run lint:js && npm run run:tests",
    "start": "http-server -c ./http.config.js",
    "preversion": "npm test && npm run build --if-present",
    "prepare": "npm test && npm run build --if-present",
    "lint:js": "eslint .",
    "fix:js": "eslint . --fix",
    "build": "npm run build:js",
    "run:tests": "node --test",
    "clean": "rm -f ./*.cjs",
    "build:js": "npm run clean && rollup -c rollup.config.js",
    "create:lock": "npm i --package-lock-only --ignore-scripts --no-audit --no-fund",
    "version:bump": "npm run version:bump:patch",
    "version:bump:patch": "npm version --no-git-tag-version patch && npm run create:lock",
    "version:bump:minor": "npm version --no-git-tag-version minor && npm run create:lock",
    "version:bump:major": "npm version --no-git-tag-version major && npm run create:lock"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shgysk8zer0/signals.git"
  },
  "author": "Chris Zuber <admin@kernvalley.us>",
  "license": "MIT",
  "funding": [
    {
      "type": "librepay",
      "url": "https://liberapay.com/shgysk8zer0"
    },
    {
      "type": "github",
      "url": "https://github.com/sponsors/shgysk8zer0"
    }
  ],
  "bugs": {
    "url": "https://github.com/shgysk8zer0/signals/issues"
  },
  "homepage": "https://github.com/shgysk8zer0/signals#readme",
  "devDependencies": {
    "@aegisjsproject/dev-server": "^1.0.5",
    "@aegisjsproject/http-utils": "^1.0.4",
    "@rollup/plugin-terser": "^0.4.4",
    "@shgysk8zer0/eslint-config": "^1.0.5",
    "@shgysk8zer0/http-server": "^1.1.1",
    "@shgysk8zer0/importmap": "^1.7.9",
    "eslint": "^10.0.0",
    "rollup": "^4.57.1"
  }
}
